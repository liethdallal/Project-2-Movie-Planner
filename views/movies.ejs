<h1> list of all movies </h1>
<form id="search-form" action="/movies">
    <input id="searchbar" type="text" name="title" placeholder="Search...">
    <button type="submit">Search</button>
</form>
<ul>
    <% movies.forEach(movie => { %>
        <li>
            <img src="<%= movie.img %>" alt="<%= movie.title %> Poster" width="200">
            <h2><%= movie.title %></h2>
            <button id="add">Add to my list!</button>
            <button id="watched">Watched?</button>
        </li>
    <% }); %>
</ul>    
<h3>Don't see the movie you're looking for? Add it!</h3>
<button id="newMovie"><a id="newmovieLink" href="/movies/new">ADD</a></button>
</body>
</html>

