<form id="search-form" action="/movies">
    <input id="searchbar" type="text" name="title" placeholder="Search...">
    <button type="submit">Search</button>
</form>
<h1 class="allMoviesList"> List of all movies </h1>
<div class="movies-grid">
    <% movies.forEach(movie => { %>
        <div class="movie-card">
            <div class="movie-content">
                <img src="<%= movie.img %>" alt="<%= movie.title %> Poster" width="200">
                <h2 class="movie-title"><%= movie.title %></h2>
            </div>
            <div class="button-container">
                <button class="add-button">Add to my list!</button>
                <button class="watched-button">Watched?</button>
            </div>
        </div>
    <% }); %>
</div>  
<h3>Don't see the movie you're looking for? Add it!</h3>
<button id="newMovie"><a id="newmovieLink" href="/movies/newMovie">ADD</a></button>
</body>
</html>
